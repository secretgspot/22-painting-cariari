{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$static": ["static"],
			"$static/*": ["static/*"],
			"$locales": ["locales"],
			"$locales/*": ["locales/*"],
			"$components": ["src/components"],
			"$components/*": ["src/components/*"],
			"$basic": ["src/components/basic"],
			"$basic/*": ["src/components/basic/*"],
			"$common": ["src/components/common"],
			"$common/*": ["src/components/common/*"],
			"$layout": ["src/components/layout"],
			"$layout/*": ["src/components/layout/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$utils": ["src/utils"],
			"$utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
